{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "docs/*", "dist/*"],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "inlineSourceMap": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": false,
    
    "module": "esNext",
    "target": "esnext",
    "moduleResolution": "node",
  }
}